{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "~/": [
        "./"
      ],
      "~/*": [
        "./*"
      ],
      // ← добавь эти две строки
      "@/entities/*": [
        "app/entities/*"
      ],
      "@/features/*": [
        "app/features/*"
      ],
      "@/shared/*": [
        "app/shared/*"
      ],
      "@/widgets/*": [
        "app/widgets/*"
      ],
      "@/assets/*": [
        "app/assets/*"
      ]
    },
    "types": [
      "@pinia/nuxt",
      "nuxt/app"
    ],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "**/*.d.ts",
    ".nuxt/**/*.d.ts",
    ".nuxt/typed-router.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
